    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:measureWithLargestChild="false"
        android:id="@+id/linearLayout2"
        android:background="#29419e">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_marginBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Chat App"
                android:id="@+id/textView5"
                android:layout_weight="0.50"
                android:textSize="24dp"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:text="New Text"
                android:layout_weight="0.50"
                android:textAlignment="textEnd"
                android:paddingRight="5dp"
                android:textSize="22dp"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="left"
            android:weightSum="1"
            android:paddingLeft="1dp"
            android:paddingRight="5dp">

            <Button
                android:id="@+id/button"
                style="@style/button_text"
                android:layout_width="123dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:background="@drawable/blue_button"
                android:text="groups"
                android:layout_weight="0.58" />

            <Button
                android:id="@+id/button2"
                style="@style/button_text"
                android:layout_width="116dp"
                android:layout_height="fill_parent"
                android:layout_above="@+id/listView"
                android:layout_alignEnd="@+id/listView"
                android:layout_alignRight="@+id/listView"
                android:background="@drawable/blue_button"
                android:text="users"
                android:layout_weight="0.49" />

            <Button
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                android:background="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
                android:textColor="#ffffff" />

        </LinearLayout>
    </LinearLayout>
        <Button
            android:id="@+id/logoutbutton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="20dp"
            android:text="Logout"
            android:textSize="8dp"
            android:layout_gravity="right"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NG"
            android:layout_alignBaseline="@+id/logoutbutton"
            android:layout_alignBottom="@+id/logoutbutton"
            android:layout_alignParentStart="true" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/logoutbutton" />


